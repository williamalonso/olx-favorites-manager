{
  "manifest_version": 3,
  "name": "Caçador de Jogos - OLX Saver",
  "version": "1.0",
  "description": "Salva anúncios da OLX direto no meu app React",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.olx.com.br/*",
    "http://localhost:3001/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.olx.com.br/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_title": "Salvar Anúncio"
  }
}